 <h1 class="text-center mt-4">All Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<div id="page-content">
    <div class="container">
        <% @categories.each do |category| %>
            <div class="row justify-content-md-center">
                <div class="col-4 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= link_to category.name, category_path(category), class: "text-primary text-decoration-none"%>
                            </h5>
                        </div>
                        <div class="card-footer text-light bg-primary">
                            <small>Created <%= time_ago_in_words(category.created_at)%> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>
                        </div>
                    </div>
                </div>
            </div>
        <% end%>
    </div>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div> 
<% if @article.errors.any?%>
    <div class="alert alert-danger alert-dismissible fade in show" role="alert">
        <div style = "display: flex; justify-content: space-between">
            <h2 class="alert-heading">Error:</h2>
            <button type="button" class="close bg-transparent border-0" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" ><strong>x</strong></span>
            </button>
        </div>
        <ul>
            <% @article.errors.full_messages.each do |msg|%>
            <li> <%= msg %> </li>
            <% end%>
        </ul>
        
    </div>    
<% end%>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article%>
            <%= form_with scope: :article, url: articles_path, local: true, class: "shadow p-5 mb-3 bg-primary rounded" do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %><br/>
                    <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %><br/>
                </div>
                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-light"%><br/>
                    <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Article"%><br/>
                </div> <br/>
                <div class="form-group row">
                    <%= f.label :category, class: "col-2 col-form-label text-light"%><br/>
                    <%# Create a select form with all the category id's from all Categories, passing in the id and names %>
                    <%= f.collection_select(:category_ids, Category.all, :id, :name, 
                    { prompt: "Make your selection from the list below ctrl click to select multiple (can be empty)"}, { multiple: true, size: 3, class: "form-select shadow rounded"})%>
                </div> <br/>
                <div class="form-group d-grid gap-2 col-2 mx-auto">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div><br/>          
            <%end%>

            <%= link_to "[ Cancel and return to All Articles ]", articles_path, class: "row justify-content-center text-decoration-none"%>
        </div>
    </div>

</div>
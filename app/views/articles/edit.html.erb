<h1>Edit Article<h1>

<%= render 'form'%>


<%= form_with model: @article, local: true do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
    </p>
    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %><br/>
    </p>
    <p>
        <%= f.submit %>
    </p>
<%end%>

<%= link_to 'Return to all articles', articles_path %>